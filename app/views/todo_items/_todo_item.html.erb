<div id="row clearfix">
  <% if todo_item.completed? %>
  <div class="complete">
    <%= link_to "Mark as complete", complete_todo_list_todo_items_path(@todo_list, todo_item.id), method: :patch %>
  </div>
  <div class="todo_item">
    <p style="opacity: 0.2"><%= todo_item.content %></p>
  </div>
      <div class="trash">
        <%= link_to "Delete", todo_list_todo_items_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Are you Sure ?"} %>
      </div>
  <% else %>
  <div class="complete">
        <%= link_to "Mark as complete", complete_todo_list_todo_items_path(@todo_list, todo_item.id), method: :patch %>
      </div>
      <div class="todo_item">
        <p style="opacity: 1"><%= todo_item.content %></p>
      </div>
      <div class="trash">
        <%= link_to "Delete", todo_list_todo_items_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Are you Sure ?"} %>
      </div>
      <% end %>
</div>